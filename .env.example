# ===================================
# TaskFlow AI - Environment Variables
# ===================================
# Copy this file to .env and update the values
# DO NOT commit .env to version control
# ===================================

# ====== Environment ======
# Set to 'production' for production builds
NODE_ENV=development

# ====== Application ======
VITE_APP_NAME="TaskFlow AI"
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION="AI-Powered Task Management Application"
VITE_APP_BASE_URL=http://localhost:3000
VITE_APP_CONTACT_EMAIL=support@taskflow-ai.com
VITE_APP_THEME_COLOR=#2563eb
VITE_APP_DEFAULT_LOCALE=en-US

# ====== Supabase ======
# Get these from your Supabase project settings -> API
VITE_SUPABASE_URL=your_supabase_url_here
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Optional: Supabase Service Role Key (for server-side operations only)
# VITE_SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# ====== Authentication ======
# Session settings (in seconds)
VITE_AUTH_SESSION_DURATION=86400  # 24 hours
VITE_AUTH_REFRESH_TOKEN_DURATION=604800  # 7 days

# ====== API & Services ======
# Base URL for API requests
VITE_API_BASE_URL=/api/v1

# Optional: External services
# VITE_GOOGLE_ANALYTICS_ID=UA-XXXXX-Y
# VITE_SENTRY_DSN=your_sentry_dsn_here
# VITE_STRIPE_PUBLIC_KEY=pk_test_...

# ====== Feature Flags ======
# Enable/disable features with feature flags
VITE_FEATURE_REGISTRATION=true
VITE_FEATURE_EMAIL_VERIFICATION=true
VITE_FEATURE_PASSWORD_RESET=true
VITE_FEATURE_SOCIAL_LOGIN=false

# ====== Rate Limiting ======
VITE_RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
VITE_RATE_LIMIT_MAX_REQUESTS=100  # Max requests per window

# ====== Caching ======
VITE_CACHE_ENABLED=true
VITE_CACHE_TTL=3600000  # 1 hour in milliseconds

# ====== Logging ======
VITE_LOG_LEVEL=debug  # error, warn, info, debug, trace
VITE_LOG_CONSOLE_ENABLED=true
VITE_LOG_REMOTE_ENABLED=false

# ====== Build Optimization ======
# Set to 'true' to enable source maps in production
VITE_SOURCEMAP=false

# ====== PWA Configuration ======
VITE_PWA_ENABLED=true
VITE_PWA_STRATEGY=generateSW  # or 'injectManifest'
VITE_PWA_REGISTER_TYPE=autoUpdate
VITE_PWA_MANIFEST_PATH=/manifest.json
VITE_PWA_SCOPE=/

# ====== Development Only ======
# These should be false in production
VITE_DEV_PROXY_ENABLED=true
VITE_DEV_SERVER_PORT=3000
VITE_DEV_SERVER_OPEN=true

# ====== Testing ======
# Used for testing environments
# VITE_TEST_USER_EMAIL=test@example.com
# VITE_TEST_USER_PASSWORD=Test@12345

# ===================================
# NOTE: Never commit sensitive data to version control
# Always add .env to your .gitignore file
# ===================================

# Feature Flags (optional)
# VITE_ENABLE_ANALYTICS=false
# VITE_ENABLE_DEBUG=false
