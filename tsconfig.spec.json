{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "./dist-test",
    "noEmit": false,
    "emitDeclarationOnly": true,
    "types": ["jest", "node"],
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "allowJs": true,
    "allowImportingTsExtensions": false,
    "baseUrl": ".",
    "module": "es2020",
    "moduleResolution": "node",
    "target": "es2020",
    "lib": ["dom", "dom.iterable", "esnext", "webworker"],
    "paths": {
      "@/*": ["src/*"]
    },
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/setupTests.ts",
    "src/config/**/*.ts",
    "src/test/**/*.ts",
    "src/test/**/*.tsx",
    "src/utils/featureFlags.ts",
    "src/utils/performance.ts",
    "src/test/setupEnv.ts",
    "src/test/setupTests.ts",
    "src/setupTests.ts",
    "src/**/__tests__/**/*.ts",
    "src/**/__tests__/**/*.tsx",
    "src/types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
